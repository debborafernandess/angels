<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <div class="well">
      <h2>Sou Investidor</h2>
      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= f.error_notification %>
        <div class="form-inputs">
          <%= f.input :name, label: 'Nome', required: true, autofocus: true %>
          <%= f.input :nickname, label: 'Apelido', required: true %>
          <%= f.input :email, label: 'Email', required: true %>
          <%= f.input :bio, as: :text, label: 'Bio', required: true %>
          <%= f.input :min_investment, label: 'Minimo de Investimento' %>
          <%= f.input :max_investment, label: 'Maximo de Investimento' %>
          <%= f.input :password, label: 'Senha', required: true, hint: ("#{@minimum_password_length} caracteres mÃ­nimos" if @minimum_password_length) %>
          <%= f.input :password_confirmation, label: 'Confirmar Senha', required: true %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Criar Perfil", class: 'btn btn-primary' %>
        </div>
      <% end %>
      <br />
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
